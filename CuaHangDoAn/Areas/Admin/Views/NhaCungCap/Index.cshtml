@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="boxed">
        <div class="boxed-child">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên nhà cung cấp</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                @foreach (var item in ViewBag.NhaCungCap)
                {
                    <tbody>
                        <tr>
                            <td width="25%">@item.Name</td>
                            <td width="25%">@item.Address</td>
                            <td width="25%">@item.SDT</td>
                            <td width="25%" class="action-cell">
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
            <a asp-controller="NhaCungCap" asp-action="Creat" class="btn btn-primary" style="margin: 1rem; background-color: #3399ff;">Thêm mới</a>
        </div>

    </div>

